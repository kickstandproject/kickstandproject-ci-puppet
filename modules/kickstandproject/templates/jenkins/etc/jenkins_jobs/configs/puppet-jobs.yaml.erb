- job-template:
    name: 'gate-{name}-puppet-lint'

    triggers:
      - zuul

    builders:
      - gerrit-git-prep
      - puppet-lint

    publishers:
      - console-log

    node: '{node}'


- job-template:
    name: 'gate-{name}-puppet-syntax'

    triggers:
      - zuul

    builders:
      - gerrit-git-prep
      - puppet-syntax

    publishers:
      - console-log

    node: '{node}'

- job-group:
    name: puppet-jobs
    jobs:
      - 'gate-{name}-merge'
      - 'gate-{name}-puppet-syntax'
      - 'gate-{name}-puppet-lint'
