- job-template:
    name: 'gate-{name}-puppetlint'

    triggers:
      - zuul

    builders:
      - gerrit-git-prep
      - puppet-lint

    publishers:
      - console-log

    node: '{node}'


- job-group:
    name: puppet-jobs
    jobs:
      - 'gate-{name}-merge'
      - 'gate-{name}-puppetlint'
