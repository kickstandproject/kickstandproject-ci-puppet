- job-template:
    name: 'gate-{name}-buildpackage'
    concurrent: false

    triggers:
      - zuul

    builders:
      - gerrit-git-prep
      - buildpackage

    publishers:
      - dpkg-buildpackage:
          artifacts: 'debian/tmp/{name}_*'
      - console-log

    node: '{node}'

- job-template:
    name: 'gate-{name}-pbuilder-amd64'
    concurrent: false

    triggers:
      - zuul

    builders:
      - copyartifact:
          project: 'gate-{name}-buildpackage'
          filter: 'debian/tmp/{name}_*'
      - shell: |
          sudo /usr/local/bin/pbuilder-{node}-amd64 build debian/tmp/{name}_*.dsc
          # Remove copied artifact
          rm -rf debian

    publishers:
      - console-log

    node: '{node}'

- job-template:
    name: 'gate-{name}-pbuilder-i386'
    concurrent: false

    triggers:
      - zuul

    builders:
      - copyartifact:
          project: 'gate-{name}-buildpackage'
          filter: 'debian/tmp/{name}_*'
      - shell: |
          sudo /usr/local/bin/pbuilder-{node}-i386 build debian/tmp/{name}_*.dsc
          # Remove copied artifact
          rm -rf debian

    publishers:
      - console-log

    node: '{node}'
