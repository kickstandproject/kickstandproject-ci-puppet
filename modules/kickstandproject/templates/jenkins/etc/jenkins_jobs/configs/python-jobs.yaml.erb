- job-template:
    name: 'gate-{name}-merge'

    triggers:
      - zuul

    builders:
      - gerrit-git-prep

    publishers:
      - console-log

    node: '{node}'


- job-template:
    name: 'gate-{name}-pep8'

    triggers:
      - zuul

    builders:
      - gerrit-git-prep
      - pep8

    publishers:
      - pep8
      - console-log

    node: '{node}'


- job-group:
    name: python-jobs
    jobs:
      - 'gate-{name}-merge'
      - 'gate-{name}-pep8'

